<Window x:Class="Будни_Программиста.View.SelectLanguagesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewModel="clr-namespace:Будни_Программиста.ViewModel"
        mc:Ignorable="d"
        Title="SelectLanguagesWindow" Height="600" Width="450"
        DataContext="{StaticResource SelectLanguagesWindowViewModel}">
    <Window.Resources>
        <viewModel:SelectLanguagesWindowViewModel x:Key="SelectLanguagesWindowViewModel"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Назад" Command="{Binding}" Click="ButtonBase_OnClick" Grid.Row="0" 
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">

        </Button>
        <Button Content="Сохранить" Command="{Binding }" Grid.Row="0"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
        </Button>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <CheckBox x:Name="aaa" Style="{StaticResource MaterialDesignFilterChipCheckBox}" Content="С++" Grid.Column="0" Grid.Row="0"></CheckBox>
            <CheckBox Style="{StaticResource MaterialDesignFilterChipCheckBox}" Content="CheckBox" Grid.Column="0" Grid.Row="1"></CheckBox>
            <CheckBox Style="{StaticResource MaterialDesignFilterChipCheckBox}" Content="CheckBox" Grid.Column="0" Grid.Row="2"></CheckBox>
            <CheckBox Style="{StaticResource MaterialDesignFilterChipCheckBox}" Content="CheckBox" Grid.Column="0" Grid.Row="3"></CheckBox>
            <CheckBox Style="{StaticResource MaterialDesignFilterChipCheckBox}" Content="CheckBox" Grid.Column="0" Grid.Row="4"></CheckBox>
            <CheckBox Style="{StaticResource MaterialDesignFilterChipCheckBox}" Content="CheckBox" Grid.Column="0" Grid.Row="5"></CheckBox>
            <Image x:Name="CPP" Grid.Column="1" Grid.Row="0"/>

        </Grid>
    </Grid>
</Window>
